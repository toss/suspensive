{
  "name": "suspensive",
  "private": true,
  "keywords": [
    "suspensive",
    "react",
    "react-query"
  ],
  "homepage": "https://suspensive.org",
  "bugs": "https://github.com/suspensive/react/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/suspensive/react.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@8.10.2",
  "type": "module",
  "workspaces": [
    "configs/*",
    "packages/*",
    "websites/*",
    "docs"
  ],
  "scripts": {
    "build": "turbo run prepack build",
    "build:watch": "turbo run prepack build:watch",
    "changeset": "changeset",
    "changeset:publish": "pnpm prepack && changeset publish",
    "changeset:version": "changeset version && pnpm i --lockfile-only",
    "clean": "pnpm --filter \"./packages/**\" run clean",
    "commit": "cz",
    "dev": "turbo run prepack dev",
    "dev:docs": "turbo run dev --scope='@suspensive/docs'",
    "dev:visualization": "turbo run prepack dev --scope='@suspensive/visualization'",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "graph": "rimraf ./graph && mkdir graph && turbo run build --graph=graph/index.html",
    "lint": "turbo run prepack lint",
    "lint:attw": "turbo run prepack lint:attw",
    "lint:monorepo": "sherif",
    "lint:pack": "packlint sort -R",
    "lint:pub": "turbo run prepack lint:pub",
    "postinstall": "husky install",
    "preinstall": "corepack enable",
    "prepack": "turbo run prepack",
    "test": "turbo run prepack test",
    "test:tsd": "turbo run prepack test:tsd",
    "test:watch": "turbo run prepack test:watch",
    "type:check": "turbo run prepack type:check"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.13.0",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.3",
    "@suspensive/eslint-config": "workspace:*",
    "@suspensive/eslint-config-js": "workspace:*",
    "@suspensive/eslint-config-ts": "workspace:*",
    "@suspensive/test-utils": "workspace:*",
    "@suspensive/tsconfig": "workspace:*",
    "@suspensive/tsup": "workspace:*",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.18.13",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitest/browser": "^1.0.0-beta.5",
    "@vitest/coverage-istanbul": "^1.0.0-beta.5",
    "@vitest/ui": "^1.0.0-beta.5",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.1.0",
    "ms": "3.0.0-canary.1",
    "packlint": "^0.2.4",
    "playwright": "^1.39.0",
    "prettier": "^3.1.0",
    "publint": "^0.2.5",
    "rimraf": "^5.0.5",
    "sherif": "^0.5.0",
    "tsup": "^8.0.1",
    "turbo": "latest",
    "typescript": "^5.2.2",
    "vite": "^5.0.2",
    "vitest": "^1.0.0-beta.5"
  },
  "volta": {
    "node": "18.18.2",
    "pnpm": "8.10.2"
  }
}
